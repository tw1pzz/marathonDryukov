<Page x:Class="Marafon.RegisterRunnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marafon"
      mc:Ignorable="d" 
      d:DesignHeight="427" d:DesignWidth="700"
      Title="RegisterRunnerPage">

    <Grid>
        <Label x:Name="label" Background="{DynamicResource dark_gray}" Content="MARATHON SKILLS 2022" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Left" Padding="100,0,0,0" Height="42" VerticalAlignment="Top" />
        <Button x:Name="button_back" Click="button_back_Click" Content="Назад" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="25" Width="65"/>
        
        <Button x:Name="button_login" Content="Login" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource ResourceKey=base_buttom}" Width="84" Height="34" Click="button_login_Click" />

        <Button x:Name="button_before" Content="Я участвовал ранее" Height="70" Margin="200,130,200,0" VerticalAlignment="Top" Click="button_before_Click"/>
        <Button x:Name="button_new" Content="Я новый участник" Height="70" Margin="200,215,200,0" VerticalAlignment="Top" Click="button_new_Click"/>
    </Grid>
</Page>
