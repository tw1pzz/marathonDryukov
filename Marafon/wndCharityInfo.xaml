<Window x:Class="Marafon.wndCharityInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marafon"
        mc:Ignorable="d"
        Title="Благотворительная организация" Height="400" Width="500" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label_charityName" Content="Label" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="480"/>
        <Image x:Name="image_charity" Height="100" Margin="10,33,10,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" FontFamily="Arial" Foreground="{DynamicResource dark_gray}" Text="TextBlock" Margin="10,142,10,10"/>

    </Grid>
</Window>
